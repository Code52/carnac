                        <GeometryDrawing Brush="White" Geometry="F1 M 92.0659,12.8218L 83.5712,42.5752C 65.5512,50.1245 56.9045,45.8551 49.1005,40.5245L 57.9939,9.38719C 65.6059,14.6192 74.0219,18.8312 91.1819,12.0032C 91.2592,11.9739 91.3432,11.9578 91.4325,11.9578C 91.8032,11.9605 92.0992,12.2671 92.0952,12.6405C 92.0939,12.7032 92.0819,12.7645 92.0659,12.8218 Z "/>
                        <GeometryDrawing Brush="White" Geometry="F1 M 86.1499,73.521C 86.1499,73.165 86.0499,72.9077 85.8499,72.7477C 85.6245,72.565 85.2419,72.4743 84.7045,72.4743L 83.9365,72.4743L 83.9365,74.589L 84.8672,74.589C 85.7232,74.589 86.1499,74.2331 86.1499,73.521 Z M 87.3472,77.9357L 86.2925,77.9357L 85.6165,76.445C 85.2739,75.6984 84.9032,75.3263 84.5099,75.3263L 83.9365,75.3263L 83.9365,77.9357L 83.0645,77.9357L 83.0645,71.7237L 84.8152,71.7237C 85.5872,71.7237 86.1739,71.8984 86.5725,72.245C 86.9112,72.545 87.0805,72.9357 87.0805,73.417C 87.0805,73.8423 86.9432,74.2063 86.6685,74.505C 86.3925,74.805 86.0045,75.005 85.5059,75.109L 85.5059,75.1357C 85.8525,75.2144 86.1952,75.597 86.5339,76.281M 89.2819,74.8957C 89.2819,73.6664 88.8645,72.6437 88.0312,71.8237C 87.1979,71.0024 86.1819,70.5917 84.9845,70.5917C 83.7432,70.5917 82.7139,71.005 81.8952,71.8317C 81.0765,72.6597 80.6685,73.6797 80.6685,74.8957C 80.6685,76.133 81.0912,77.165 81.9379,77.9944C 82.7672,78.8103 83.7832,79.2184 84.9845,79.2184C 86.1739,79.2184 87.1872,78.805 88.0245,77.9784C 88.8619,77.1517 89.2819,76.1237 89.2819,74.8957 Z M 89.8672,74.8703C 89.8672,76.237 89.3952,77.385 88.4525,78.3171C 87.5072,79.2477 86.3432,79.7144 84.9579,79.7144C 83.5619,79.7144 82.4005,79.2597 81.4779,78.3517C 80.5565,77.445 80.0952,76.297 80.0952,74.909C 80.0952,73.5464 80.5645,72.3957 81.5019,71.461C 82.4392,70.5263 83.6045,70.057 84.9979,70.057C 86.3645,70.057 87.5125,70.505 88.4419,71.3984C 89.3925,72.3157 89.8672,73.4717 89.8672,74.8703 Z "/>
